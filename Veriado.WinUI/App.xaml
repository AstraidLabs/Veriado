<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Veriado.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:Veriado.WinUI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- WinUI knihovní zdroje MUSÍ být první -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Vždy používej ms-appx:/// -->
                <ResourceDictionary Source="ms-appx:///Resources/Animations.xaml" />
                <ResourceDictionary Source="ms-appx:///Resources/Theme.xaml" />
                <ResourceDictionary Source="ms-appx:///Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Fallback, pokud by běhové prostředí nemělo DividerStrokeColorDefaultBrush -->
            <SolidColorBrush x:Key="DividerStrokeColorDefaultBrush"
                       Color="{ThemeResource SurfaceStrokeColorDefault}" />

            <!-- Globální konvertory -->
            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <conv:SizeToHumanConverter x:Key="SizeToHumanConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>