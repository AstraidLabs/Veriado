<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Veriado.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctb="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Veriado.WinUI.Views"
    mc:Ignorable="d"
    Title="Veriado">

    <NavigationView
        x:Name="ShellNavigationView"
        PaneDisplayMode="Auto"
        IsSettingsVisible="False"
        DataContext="{x:Bind ViewModel}">
        <i:Interaction.Behaviors>
            <ctb:EventToCommandBehavior
                EventName="Loaded"
                Command="{Binding InitializeCommand}" />
            <ctb:EventToCommandBehavior
                EventName="SelectionChanged"
                Command="{Binding NavigateCommand}"
                EventArgsConverter="{StaticResource NavigationSelectionConverter}" />
        </i:Interaction.Behaviors>
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Soubory" Icon="BrowsePhotos" Tag="Files" IsSelected="True" />
            <NavigationViewItem Content="Import" Icon="Upload" Tag="Import" />
        </NavigationView.MenuItems>

        <Frame x:Name="RootFrame" NavigationFailed="OnNavigationFailed" />
    </NavigationView>
</Window>
