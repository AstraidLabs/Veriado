<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Veriado.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Veriado.WinUI.Views"
    mc:Ignorable="d"
    Title="Veriado">

    <NavigationView
        x:Name="ShellNavigationView"
        PaneDisplayMode="Auto"
        IsSettingsVisible="False"
        SelectionChanged="OnNavigationSelectionChanged">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Soubory" Icon="BrowsePhotos" Tag="Files" />
            <NavigationViewItem Content="Import" Icon="Upload" Tag="Import" />
        </NavigationView.MenuItems>

        <Frame x:Name="RootFrame" NavigationFailed="OnNavigationFailed" />
    </NavigationView>
</Window>
