<Window
    x:Class="Veriado.WinUI.Views.StartupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:startup="using:Veriado.WinUI.ViewModels.Startup"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls">
    <Grid Background="{ThemeResource AppBackgroundBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            MaxWidth="420"
            Spacing="12">
            <winui:ProgressRing
                Width="48"
                Height="48"
                IsActive="{Binding IsLoading}"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBlock
                Text="{Binding StatusMessage}"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Foreground="{ThemeResource AppTextPrimaryBrush}"
                Style="{ThemeResource BodyStrongTextBlockStyle}" />
            <TextBlock
                Text="{Binding DetailsMessage}"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Foreground="{ThemeResource AppTextPrimaryBrush}"
                Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBlock
                Text="Aplikace běží v bezpečném režimu. Některé funkce mohou být omezené."
                TextAlignment="Center"
                TextWrapping="Wrap"
                Foreground="{ThemeResource AppTextPrimaryBrush}"
                Visibility="{Binding SafeMode, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBlock
                TextAlignment="Center"
                TextWrapping="Wrap"
                Foreground="{ThemeResource AppTextSecondaryBrush}"
                Visibility="{Binding HasDiagnosticsLog, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Run Text="Podrobný log: " />
                <Run Text="{Binding DiagnosticsLogPath, Mode=OneWay}" />
            </TextBlock>
            <Button
                x:Uid="StartupWindow_RetryButton"
                Width="160"
                HorizontalAlignment="Center"
                Command="{Binding RetryCommand}"
                Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <Border
            Grid.Row="1"
            Margin="0,24,0,0"
            Background="{ThemeResource AppBackgroundBrush}"
            CornerRadius="12"
            Padding="16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Steps}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" Spacing="8" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="startup:StartupStepViewModel">
                            <Grid ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Grid.Column="0"
                                    Glyph="{Binding Glyph}"
                                    FontSize="16"
                                    VerticalAlignment="Top" />
                                <StackPanel Grid.Column="1" Spacing="2">
                                    <TextBlock
                                        Text="{Binding Title}"
                                        Foreground="{ThemeResource AppTextPrimaryBrush}"
                                        Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                    <TextBlock
                                        Text="{Binding Message}"
                                        TextWrapping="WrapWholeWords"
                                        Foreground="{ThemeResource AppTextSecondaryBrush}" />
                                    <TextBlock
                                        Text="{Binding ErrorMessage}"
                                        TextWrapping="WrapWholeWords"
                                        Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                        Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" HorizontalAlignment="Right" Spacing="4">
                                    <TextBlock
                                        Text="{Binding StatusText}"
                                        Foreground="{ThemeResource AppTextSecondaryBrush}" />
                                    <TextBlock
                                        Text="{Binding DurationText}"
                                        Foreground="{ThemeResource AppTextSecondaryBrush}"
                                        Visibility="{Binding HasDuration, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
