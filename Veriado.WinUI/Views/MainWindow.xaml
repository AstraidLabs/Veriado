<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Veriado.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ctb="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">
  <muxc:NavigationView
      x:Name="ShellNavigationView"
      PaneDisplayMode="Auto"
      IsBackButtonVisible="Visible"
      IsBackEnabled="{Binding IsBackEnabled, Mode=OneWay}"
      IsSettingsVisible="False"
      Header="{Binding Title}">
    <i:Interaction.Behaviors>
      <ctb:EventToCommandBehavior EventName="Loaded" Command="{Binding InitializeCommand}" />
      <ctb:EventToCommandBehavior EventName="SelectionChanged" Command="{Binding NavigateCommand}" EventArgsParameterPath="SelectedItem.Tag" />
      <ctb:EventToCommandBehavior EventName="BackRequested" Command="{Binding GoBackCommand}" />
    </i:Interaction.Behaviors>
    <muxc:NavigationView.MenuItems>
      <muxc:NavigationViewItem Content="Soubory" Icon="Document" Tag="Files" IsSelected="True" />
      <muxc:NavigationViewItem Content="Import" Icon="Upload" Tag="Import" />
    </muxc:NavigationView.MenuItems>
    <Frame x:Name="ContentFrame" />
  </muxc:NavigationView>
</Window>
